<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



   <view
        android:id="@+id/leftPanel"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="@color/colorAccent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        />

    <view
        android:id="@+id/rightPanel"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:background="@color/colorAccent"
        app:layout_constraintLeft_toRightOf="@id/leftPanel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintTop_toTopOf="@+id/leftPanel"
        />

    <Button
        android:id="@+id/splitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Split"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@+id/leftPanel"
        app:layout_constraintLeft_toLeftOf="@+id/leftPanel"
        app:layout_constraintRight_toRightOf="@id/leftPanel"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:id="@+id/doubleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Double"
        app:layout_constraintTop_toBottomOf="@id/splitButton"
        app:layout_constraintLeft_toLeftOf="@+id/leftPanel"
        app:layout_constraintRight_toRightOf="@id/leftPanel"
        android:background="@color/colorPrimaryDark"
        />



    <Button
        android:id="@+id/hitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hit"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/rightPanel"
        app:layout_constraintLeft_toLeftOf="@+id/rightPanel"
        app:layout_constraintRight_toRightOf="@id/rightPanel"
        android:background="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/standButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Stand"
        app:layout_constraintTop_toBottomOf="@id/hitButton"
        app:layout_constraintLeft_toLeftOf="@+id/rightPanel"
        app:layout_constraintRight_toRightOf="@id/rightPanel"
        android:background="@color/colorPrimaryDark"
        />

    <TextView
        android:id="@+id/balanceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/leftPanel"
        app:layout_constraintRight_toLeftOf="@id/rightPanel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.95"

        android:text="Balance: 4000$"
        />

</android.support.constraint.ConstraintLayout>
